        const renderer = new THREE.WebGLRenderer({ antialias: true, alpha: true });
        renderer.setSize(window.innerWidth, window.innerHeight);
        renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2)); // æ€§èƒ½ä¼˜åŒ–
        document.getElementById('container').appendChild(renderer.domElement);
        // --- æ ¸å¿ƒå¯¹è±¡ç»„ ---
        // æˆ‘ä»¬å°†æ‰€æœ‰ä¾é™„äºåœ°çƒçš„ç‰©ä½“æ”¾å…¥ä¸€ä¸ª Groupï¼Œè¿™æ ·æ—‹è½¬ Group å³å¯å¸¦åŠ¨æ‰€æœ‰ç‰©ä½“
        const earthGroup = new THREE.Group();
        scene.add(earthGroup);

        // --- 1. åˆ›å»ºæ˜Ÿç©ºèƒŒæ™¯ (ç²’å­ç³»ç»Ÿ) ---
        function createStars() {
            const geometry = new THREE.BufferGeometry();
            const count = 3000;
            const positions = new Float32Array(count * 3);
            const colors = new Float32Array(count * 3);

            for (let i = 0; i < count; i++) {
                const r = 400 + Math.random() * 400; // è·ç¦»ä¸­å¿ƒ 400-800
                const theta = 2 * Math.PI * Math.random();
                const phi = Math.acos(2 * Math.random() - 1);
                
                positions[i * 3] = r * Math.sin(phi) * Math.cos(theta);
                positions[i * 3 + 1] = r * Math.sin(phi) * Math.sin(theta);
                positions[i * 3 + 2] = r * Math.cos(phi);

                // æ˜Ÿæ˜Ÿé¢œè‰²éšæœºå¾®è°ƒ
                const colorType = Math.random();
                if(colorType > 0.9) { colors[i*3]=1; colors[i*3+1]=0.8; colors[i*3+2]=0.8; } // çº¢å·¨æ˜Ÿ
                else if(colorType > 0.7) { colors[i*3]=0.8; colors[i*3+1]=0.8; colors[i*3+2]=1; } // è“å·¨æ˜Ÿ
                else { colors[i*3]=1; colors[i*3+1]=1; colors[i*3+2]=1; } // ç™½æ˜Ÿ
            }

            geometry.setAttribute('position', new THREE.BufferAttribute(positions, 3));
            geometry.setAttribute('color', new THREE.BufferAttribute(colors, 3));

            const material = new THREE.PointsMaterial({
                size: 1.5,
                vertexColors: true,
                transparent: true,
                opacity: 0.8,
                sizeAttenuation: true
            });

            const starField = new THREE.Points(geometry, material);
            scene.add(starField);
            return starField;
        }
        const stars = createStars();

        // --- 2. åˆ›å»ºåœ°çƒæœ¬ä½“ ---
        const textureLoader = new THREE.TextureLoader();
        // ä½¿ç”¨æ›´é«˜æ¸…æˆ–è‰²å½©æ›´æ·±çš„è´´å›¾ URL æ¨¡æ‹Ÿç§‘æŠ€æ„Ÿ
        const earthGeo = new THREE.SphereGeometry(1, 64, 64);
        const earthMat = new THREE.MeshPhongMaterial({
            map: textureLoader.load('https://threejs.org/examples/textures/planets/earth_atmos_2048.jpg'),
            specularMap: textureLoader.load('https://threejs.org/examples/textures/planets/earth_specular_2048.jpg'),
            normalMap: textureLoader.load('https://threejs.org/examples/textures/planets/earth_normal_2048.jpg'),
            normalScale: new THREE.Vector2(0.85, 0.85),
            specular: new THREE.Color(0x333333),
            shininess: 15
        });
        const earth = new THREE.Mesh(earthGeo, earthMat);
        earthGroup.add(earth);

        // --- 3. åˆ›å»ºå¤§æ°”å±‚å…‰æ™• (Shader) ---
        const atmosGeo = new THREE.SphereGeometry(1.2, 64, 64); // ç¨å¤§ä¸€ç‚¹
        const atmosMat = new THREE.ShaderMaterial({
            vertexShader: document.getElementById('vertexShader').textContent,
            fragmentShader: document.getElementById('fragmentShader').textContent,
            blending: THREE.AdditiveBlending,
            side: THREE.BackSide,
            transparent: true
        });
        const atmosphere = new THREE.Mesh(atmosGeo, atmosMat);
        scene.add(atmosphere); // å¤§æ°”å±‚ä¸éšåœ°çƒè½¬åŠ¨ï¼Œè€Œæ˜¯æ°¸è¿œé¢å‘æ‘„åƒæœºè¾¹ç¼˜

        // --- 4. åˆ›å»ºäº‘å±‚ ---
        const cloudGeo = new THREE.SphereGeometry(1.01, 64, 64);
        const cloudMat = new THREE.MeshPhongMaterial({
            map: textureLoader.load('https://threejs.org/examples/textures/planets/earth_clouds_1024.png'),
            transparent: true,
            opacity: 0.6,
            blending: THREE.AdditiveBlending,
            side: THREE.DoubleSide
        });
        const clouds = new THREE.Mesh(cloudGeo, cloudMat);
        earthGroup.add(clouds);

        // --- 5. æ•°æ®å¯è§†åŒ– (å‘å…‰æŸ±ä½“ + åŠ¨æ€æ•ˆæœ) ---
        const bars = [];
        const hitTargets = []; // ç”¨äºå°„çº¿æ£€æµ‹çš„äº¤äº’å¯¹è±¡åˆ—è¡¨
        const maxData = rawData[0].count; // æœ€å¤§å€¼ç”¨äºå½’ä¸€åŒ–

        // ç»çº¬åº¦è½¬ Vector3 (ä¿®æ­£ç‰ˆ)
        function latLonToVector3(lat, lon, radius) {
            const phi = (90 - lat) * (Math.PI / 180);
            const theta = (lon + 90) * (Math.PI / 180); // ä¿®æ­£ï¼šè°ƒæ•´ç»åº¦åç§»é‡ä»¥å¯¹é½çº¹ç† (lon + 90)

            // æ ‡å‡† SphereGeometry çš„ UV æ˜ å°„ä¸‹ï¼Œéœ€è¦åè½¬ X è½´æˆ–è°ƒæ•´ theta
            // ç»è¿‡ä¿®æ­£çš„å…¬å¼ï¼Œç¡®ä¿ Lon 0 å¯¹åº” Z è½´æ­£å‘ (Greenwich)
            const x = -(radius * Math.sin(phi) * Math.cos(theta));
            const z = (radius * Math.sin(phi) * Math.sin(theta));
            const y = (radius * Math.cos(phi));
            
            return new THREE.Vector3(x, y, z);
        }

        // åˆ›å»ºæŸ±ä½“
        rawData.forEach(data => {
            const height = (data.count / maxData) * 0.5 + 0.05; // é«˜åº¦æ˜ å°„
            const colorHex = config.colors[data.colorKey] || 0xffffff;
            
            // --- æ–°å¢ï¼šåº•éƒ¨æ ‡è®°ç‚¹ (Base Dot) ---
            // è¿™å¯ä»¥å¸®åŠ©ç”¨æˆ·å®šä½ï¼Œå³ä½¿æŸ±ä½“ç¼©çŸ­æ—¶ä¹Ÿèƒ½çœ‹åˆ°ä½ç½®
            // å¢å¤§åŠå¾„è‡³ 0.025 ä»¥æ›´æ–¹ä¾¿ç‚¹å‡»
            const baseGeometry = new THREE.CircleGeometry(0.025, 16);
            const baseMaterial = new THREE.MeshBasicMaterial({
                color: colorHex,
                transparent: true,
                opacity: 0.6,
                side: THREE.DoubleSide
            });
            const baseDot = new THREE.Mesh(baseGeometry, baseMaterial);
            // ç¨å¾®é«˜å‡ºåœ°çƒè¡¨é¢ä¸€ç‚¹ç‚¹ (1.002) é˜²æ­¢ Z-fightingé—ªçƒ
            const basePos = latLonToVector3(data.capital.lat, data.capital.lon, 1.002);
            baseDot.position.copy(basePos);
            baseDot.lookAt(new THREE.Vector3(0,0,0));
            
            // ä¸º Dot æ·»åŠ  userDataï¼Œä»¥ä¾¿äº¤äº’
            baseDot.userData = { 
                info: data, 
                isDot: true 
            };
            
            earthGroup.add(baseDot);
            
            // --- æŸ±ä½“ ---
            // åŠ ç²—è‡³ 0.03 æ–¹ä¾¿é¼ æ ‡äº¤äº’
            const geometry = new THREE.BoxGeometry(0.03, 0.03, height); // åˆå§‹ lying down on Z
            geometry.applyMatrix4(new THREE.Matrix4().makeTranslation(0, 0, height / 2)); // è°ƒæ•´é”šç‚¹åˆ°åº•éƒ¨

            // å‘å…‰æè´¨
            const material = new THREE.MeshPhongMaterial({
                color: colorHex,
                emissive: colorHex,
                emissiveIntensity: 0.6,
                transparent: true,
                opacity: 0.9
            });

            const bar = new THREE.Mesh(geometry, material);
            const pos = latLonToVector3(data.capital.lat, data.capital.lon, 1);
            
            bar.position.copy(pos);
            bar.lookAt(new THREE.Vector3(0,0,0)); // æŒ‡å‘åœ†å¿ƒ
            
            // å­˜å…¥è‡ªå®šä¹‰å±æ€§ç”¨äºåŠ¨ç”»
            bar.userData = {
                originalScaleZ: 1,
                hoverScaleZ: 1,
                info: data,
                randomPhase: Math.random() * Math.PI * 2 // éšæœºç›¸ä½ç”¨äºå‘¼å¸æ•ˆæœ
            };
            
            // å…³é”®ï¼šå°† Bar é“¾æ¥åˆ° Dotï¼Œè¿™æ ·æ‚¬åœ Dot æ—¶å¯ä»¥æ‰¾åˆ°å¯¹åº”çš„ Bar è¿›è¡ŒåŠ¨ç”»
            baseDot.userData.linkedBar = bar;

            earthGroup.add(bar);
            bars.push(bar);
            
            // å°† Bar å’Œ Dot éƒ½åŠ å…¥å°„çº¿æ£€æµ‹åˆ—è¡¨
            hitTargets.push(bar);
            hitTargets.push(baseDot);
        });

        // --- 6. è¿æ¥çº¿ (Bezier Curves) ---
        // é€‰å– Top 10 å›½å®¶ï¼Œéšæœºè¿æ¥ç”Ÿæˆç½‘ç»œ
        const lineMaterial = new THREE.LineBasicMaterial({
            color: 0x00f3ff,
            transparent: true,
            opacity: 0.3,
            blending: THREE.AdditiveBlending
        });

        const topCountries = rawData.slice(0, 15);
        for(let i=0; i<topCountries.length; i++) {
            for(let j=i+1; j<topCountries.length; j++) {
                if(Math.random() > 0.7) { // 30% æ¦‚ç‡è¿æ¥ï¼Œé¿å…å¤ªä¹±
                    const p1 = latLonToVector3(topCountries[i].capital.lat, topCountries[i].capital.lon, 1);
                    const p2 = latLonToVector3(topCountries[j].capital.lat, topCountries[j].capital.lon, 1);
                    
                    // è®¡ç®—æ§åˆ¶ç‚¹ (æ‹‰é«˜æ›²çº¿)
                    const dist = p1.distanceTo(p2);
                    const mid = p1.clone().add(p2).multiplyScalar(0.5).normalize().multiplyScalar(1 + dist * 0.5);
                    
                    const curve = new THREE.QuadraticBezierCurve3(p1, mid, p2);
                    const points = curve.getPoints(50);
                    const geometry = new THREE.BufferGeometry().setFromPoints(points);
                    
                    const line = new THREE.Line(geometry, lineMaterial);
                    earthGroup.add(line);
                    
                    // æ·»åŠ é£è¡Œçš„å…‰ç‚¹ç²’å­
                    // (ä¸ºäº†ä»£ç ç®€æ´ï¼Œè¿™é‡Œæš‚ä¸æ·»åŠ å¤æ‚çš„æµå…‰ç²’å­ï¼Œä»…å±•ç¤ºé™æ€å¼§çº¿ç½‘ç»œ)
                }
            }
        }

        // --- ç¯å…‰ç³»ç»Ÿ ---
        const ambientLight = new THREE.AmbientLight(0x404040, 0.5); // è¾ƒæš—çš„ç¯å¢ƒå…‰
        scene.add(ambientLight);

        const sunLight = new THREE.DirectionalLight(0xffffff, 1.2);
        sunLight.position.set(5, 3, 5);
        scene.add(sunLight);

        const rimLight = new THREE.DirectionalLight(0x4455ff, 0.5); // è“è‰²èƒŒå…‰
        rimLight.position.set(-5, 0, -5);
        scene.add(rimLight);

        // --- äº¤äº’æ§åˆ¶ (é¼ æ ‡æ‹–æ‹½ + æƒ¯æ€§ + æ»šè½®) ---
        let targetRotationX = 0;
        let targetRotationY = 0;
        let targetRotationXOnMouseDown = 0;
        let targetRotationYOnMouseDown = 0;
        let mouseX = 0, mouseY = 0;
        let mouseXOnMouseDown = 0, mouseYOnMouseDown = 0;
        let windowHalfX = window.innerWidth / 2;
        let windowHalfY = window.innerHeight / 2;
        let isDragging = false;
        
        // ç›®æ ‡ä½ç½®çš„ç¼“å­˜ï¼ˆç”¨äºè‡ªåŠ¨æ—‹è½¬é€»è¾‘ï¼‰
        let autoRotate = true;

        document.addEventListener('mousedown', onDocumentMouseDown, false);
        document.addEventListener('touchstart', onDocumentTouchStart, {passive: false});
        document.addEventListener('wheel', onDocumentMouseWheel, {passive: false});
        // å³é”®å¤„ç†
        document.addEventListener('contextmenu', event => event.preventDefault());

        function onDocumentMouseDown(event) {
            // ä¿®å¤ï¼šå¦‚æœç‚¹å‡»çš„æ˜¯UIé¢æ¿å†…éƒ¨çš„å…ƒç´ ï¼ˆå¦‚è¾“å…¥æ¡†ã€æŒ‰é’®æˆ–é¢æ¿èƒŒæ™¯ï¼‰ï¼Œåˆ™ä¸æ‰§è¡ŒCanvasæ‹–æ‹½é€»è¾‘
            if (event.target.closest('.glass-panel') || event.target.tagName === 'INPUT' || event.target.tagName === 'BUTTON') {
                return;
            }

            event.preventDefault();
            document.addEventListener('mousemove', onDocumentMouseMove, false);
            document.addEventListener('mouseup', onDocumentMouseUp, false);
            document.addEventListener('mouseout', onDocumentMouseUp, false);

            mouseXOnMouseDown = event.clientX - windowHalfX;
            mouseYOnMouseDown = event.clientY - windowHalfY;
            targetRotationYOnMouseDown = targetRotationY;
            targetRotationXOnMouseDown = targetRotationX;
            isDragging = true;
            autoRotate = false; // ç”¨æˆ·äº¤äº’æ—¶åœæ­¢è‡ªåŠ¨æ—‹è½¬
        }

        function onDocumentMouseMove(event) {
            mouseX = event.clientX - windowHalfX;
            mouseY = event.clientY - windowHalfY;
            // ç®€å•çš„æ¯”ä¾‹æ˜ å°„
            targetRotationY = targetRotationYOnMouseDown + (mouseX - mouseXOnMouseDown) * 0.005;
            targetRotationX = targetRotationXOnMouseDown + (mouseY - mouseYOnMouseDown) * 0.005;
        }

        function onDocumentMouseUp(event) {
            document.removeEventListener('mousemove', onDocumentMouseMove, false);
            document.removeEventListener('mouseup', onDocumentMouseUp, false);
            document.removeEventListener('mouseout', onDocumentMouseUp, false);
            isDragging = false;
            // æ¾å¼€åä¸ç«‹å³æ¢å¤è‡ªåŠ¨æ—‹è½¬ï¼Œç•™ç»™ç”¨æˆ·è§‚å¯Ÿ
            setTimeout(() => { if(!isDragging) autoRotate = true; }, 5000);
        }

        function onDocumentTouchStart(event) {
            if (event.touches.length === 1) {
                // ä¿®å¤ï¼šè§¦æ‘¸UIæ—¶ä¸æ—‹è½¬åœ°çƒ
                if (event.target.closest('.glass-panel') || event.target.tagName === 'INPUT' || event.target.tagName === 'BUTTON') {
                    return;
                }
                event.preventDefault();
                mouseXOnMouseDown = event.touches[0].pageX - windowHalfX;
                targetRotationYOnMouseDown = targetRotationY;
                targetRotationXOnMouseDown = targetRotationX; // Initialize X too
                // è¿™é‡Œç®€åŒ–Touché€»è¾‘ï¼Œä»…å¤„ç†å•æŒ‡æ—‹è½¬
                // éœ€è¦å®Œå–„Touch Move...
            }
        }

        function onDocumentMouseWheel(event) {
            // å¦‚æœæ»šè½®åœ¨é¢æ¿ä¸Šï¼Œå…è®¸é»˜è®¤æ»šåŠ¨ï¼ˆè™½ç„¶ç›®å‰é¢æ¿å†…å®¹ä¸å¤šï¼Œä½†è¿™æ˜¯å¥½ä¹ æƒ¯ï¼‰
            if (event.target.closest('.glass-panel')) {
                return;
            }
            event.preventDefault();
            const fov = camera.fov + event.deltaY * 0.05;
            camera.fov = THREE.MathUtils.clamp(fov, 20, 75); // é™åˆ¶ç¼©æ”¾èŒƒå›´
            camera.updateProjectionMatrix();
        }

        // --- é¼ æ ‡æ‚¬åœæ£€æµ‹ (Raycaster) ---
        const raycaster = new THREE.Raycaster();
        const mouse = new THREE.Vector2();
        let intersectedBar = null; // è¿™ä¸ªå˜é‡ç°åœ¨å­˜å‚¨â€œè¢«æ¿€æ´»çš„Barâ€ï¼Œå¯èƒ½æ˜¯ç›´æ¥æ‚¬åœçš„ï¼Œä¹Ÿå¯èƒ½æ˜¯é€šè¿‡Dotæ‚¬åœçš„
        let lastMouseX = 0; // æ–°å¢ï¼šä¿å­˜é¼ æ ‡Xåæ ‡
        let lastMouseY = 0; // æ–°å¢ï¼šä¿å­˜é¼ æ ‡Yåæ ‡

        window.addEventListener('mousemove', (event) => {
            mouse.x = (event.clientX / window.innerWidth) * 2 - 1;
            mouse.y = -(event.clientY / window.innerHeight) * 2 + 1;
            lastMouseX = event.clientX; // æ›´æ–°å…¨å±€é¼ æ ‡åæ ‡
            lastMouseY = event.clientY; // æ›´æ–°å…¨å±€é¼ æ ‡åæ ‡
        });
        // --- æœç´¢åŠŸèƒ½ ---
        function findCountry() {
            const val = document.getElementById('countrySearch').value.toLowerCase();
            const target = bars.find(b => 
                b.userData.info.country.toLowerCase().includes(val) || 
                b.userData.info.continent.toLowerCase().includes(val)
            );

            if (target) {
                // 1. åœæ­¢è‡ªåŠ¨æ—‹è½¬
                autoRotate = false;
                
                // 2. è®¡ç®—ç›®æ ‡æ—‹è½¬è§’åº¦
                // æˆ‘ä»¬éœ€è¦å°†åœ°çƒè½¬åˆ°ï¼Œä½¿å¾—è¯¥å›½å®¶é¢å¯¹ç›¸æœº (0, 0, Z)
                // å›½å®¶çš„åŸå§‹ä½ç½®å‘é‡
                const pos = target.position.clone();
                // è½¬æ¢ä¸ºçƒé¢åæ ‡
                const spherical = new THREE.Spherical().setFromVector3(pos);
                
                // è®¡ç®—éœ€è¦çš„ group æ—‹è½¬
                // Spherical phiæ˜¯ä»Yè½´æ­£å‘ä¸‹æ¥çš„è§’åº¦ï¼Œthetaæ˜¯ä»Zè½´æ­£å‘é€†æ—¶é’ˆçš„è§’åº¦
                // æˆ‘ä»¬éœ€è¦å°†è¿™ä¸ªç‚¹è½¬åˆ°ç›¸æœºé¢å‰ (theta = 0, phi = PI/2)
                
                // ç®€åŒ–çš„ç›®æ ‡æ—‹è½¬è®¡ç®—ï¼š
                targetRotationY = -spherical.theta - Math.PI / 2; 
                targetRotationX = Math.PI / 2 - spherical.phi;

                // 3. é«˜äº®æ˜¾ç¤º
                target.userData.hoverScaleZ = 2.0;
                target.material.emissiveIntensity = 1.0;
                
                updateDetailPanel(target.userData.info);
                
                // 4. é‡ç½®å®šæ—¶å™¨
                setTimeout(() => { 
                    target.userData.hoverScaleZ = 1; 
                    target.material.emissiveIntensity = 0.6;
                    autoRotate = true;
                }, 3000);
            } else {
                alert("æœªæ‰¾åˆ°ç›¸å…³åŒºåŸŸ");
            }
        }

        // ç›‘å¬å›è½¦é”®æœç´¢
        document.getElementById('countrySearch').addEventListener('keypress', function(event) {
            if (event.key === 'Enter') {
                findCountry();
            }
        });
